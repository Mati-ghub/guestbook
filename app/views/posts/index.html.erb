<p class="lead">
  <%= t "hello" %>
  <%= link_to "Dodaj własny wpis juz teraz!", new_post_path %>
</p>

<% @posts.each do |post|%>
  <blockquote>
    <p><%= post.body %></p>
    <footer><cite><%= post.author %></cite></footer>
  </blockquote>
<%end%>

<div class="row">
  <div class="col-mid-12">
  </div>
</div>

<div class="btn-group">
  <button type="button" class="btn-default dropdown-toggle" data-toggle="dropdown">
    Wybierz język <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
    <li><%= link_to "PL", set_locale_path(locale: "pl")%></li>
    <li><%= link_to "EN", set_locale_path(locale: "en")%></li>
  </ul>
</div> 


